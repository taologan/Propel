<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Propel.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Propel.Views.CreateLaunchView"
             x:DataType="viewModels:CreateLaunchViewModel">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBox Text = "{Binding SearchText}" Watermark="Search for Apps"/>
        </StackPanel>
        <Button Content="Create Launch"
                DockPanel.Dock="Bottom"
                HorizontalAlignment="Center" />
        <!-- <ItemsControl ItemsSource="{Binding InstalledApps}"></ItemsControl> -->
        <ListBox ItemsSource="{Binding FilteredInstalledApps}"></ListBox>
    </DockPanel>
</UserControl>
